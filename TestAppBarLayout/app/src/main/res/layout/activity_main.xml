<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pix.testappbarlayout.MainActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="368dp"
       android:layout_height="495dp"
       tools:layout_editor_absoluteY="8dp"
       tools:layout_editor_absoluteX="8dp">
       <Button
           android:textAllCaps="false"
           android:onClick="scrollTypeClick"
           android:text="ScrollTypeDemo"
           android:layout_width="match_parent"
           android:layout_height="50dp" />
       <Button
           android:textAllCaps="false"
           android:onClick="enterAlwaysClick"
           android:text="EnterAlwaysDemo"
           android:layout_width="match_parent"
           android:layout_height="50dp" />
       <Button
           android:textAllCaps="false"
           android:onClick="eucClick"
           android:text="ExitUntilCollapsedDemo"
           android:layout_width="match_parent"
           android:layout_height="50dp" />
       <Button
           android:textAllCaps="false"
           android:onClick="eacClick"
           android:text="EnterAlwaysCollapsedDemo"
           android:layout_width="match_parent"
           android:layout_height="50dp" />
       <Button
           android:textAllCaps="false"
           android:onClick="ctlClick"
           android:text="CollapsingToolbarLayoutDemo"
           android:layout_width="match_parent"
           android:layout_height="50dp" />
   </LinearLayout>

</android.support.constraint.ConstraintLayout>
