<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FFF"
            android:text="线性渐变"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:background="@drawable/shape_gradient_line"
            android:layout_height="150dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#FFF"
            android:text="放射渐变"
            android:background="@drawable/shape_gradient_radial"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FFF"
            android:text="扫描式渐变"
            android:background="@drawable/shape_gradient_sweep"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#FFF"
            android:text="百分比渐变原点"
            android:background="@drawable/shape_gradient_sweep_persent"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>
</LinearLayout>